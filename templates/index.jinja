<!DOCTYPE html>
<html lang="en">
<head>
    <title>Lernplatze</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        {% if cached %}
            <div class='row'>
                <div class="col-12">
                    <h3 class='alert alert-danger text-center'>Cached</h3>
                <div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
            <table class='table text-center table-striped'>
                <thead>
                    <tr>
                        <th scope="col">Day</th>
                        <th scope="col">Place</th>
                        <th scope="col">Period</th>
                        <th scope="col">Link</th>
                    </tr>
                </thead>
                <tbody>
                {% for day in days %}
                    <tr>
                        <th scope='row'>
                            <a href='http://localhost:5000/day/{{day.isoformat()}}' class="link-primary" target='_blank'>{{day.strftime("%a, %d-%b")}}</a>
                        </th>
                        {% if days[day] %}
                            <td>{{days[day]['Place']}}</td>
                            <td>{{days[day]['Period']}}</td>
                            <td>
                                <a href={{days[day]['Link']}} class="link-primary" target='_blank'>Appointment</a>
                            </td>
                        {% else %}
                            <td colspan="3"></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
            <div class="col-2"></div>
        </div>
        <div class='row'>
            <div class='col-4'></div>
            <div class='col-4'>
                <img src='static/MNL_1.jpeg' class="img-fluid">
            </div>
        </div>
    </div>

    
</body>
</html>